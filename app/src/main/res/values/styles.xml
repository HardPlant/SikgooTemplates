<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.CustomTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
    <style name="shadowed">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_shadow</item>
    </style>
    <!--popup-->
    <style name="popup_title" parent="shadowed">
        <item name="android:fontFamily">@font/NanumSquareEB</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="popup_date" parent="shadowed">
        <item name="android:fontFamily">@font/NanumSquareEB</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="popup_button">
        <item name="android:fontFamily">@font/NanumSquareEB</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--main-->
    <style name="toolbar_placeholder">
        <item name="android:fontFamily">@font/NanumSquareR</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/toolbar_placeholder</item>
    </style>
    <style name="timer">
        <item name="android:fontFamily">@font/NanumSquareR</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="rest_desc" parent="shadowed">
        <item name="android:fontFamily">@font/NanumSquareR</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="match_button">
        <item name="android:fontFamily">@font/Eras Bold ITC</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="people_name">
        <item name="android:fontFamily">@font/NanumSquareEB</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="people_hashtag">
        <item name="android:fontFamily">@font/NanumSquareR</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!--rest-->
    <style name="today_rest" parent="shadowed">
    <item name="android:fontFamily">@font/NanumSquareEB</item>
    <item name="android:textSize">32sp</item>
    </style>
    <style name="section">
        <item name="android:fontFamily">@font/NanumSquareEB</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="column_title">
        <item name="android:fontFamily">@font/NanumSquareEB</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="column_content">
        <item name="android:fontFamily">@font/NanumSquareR</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--rest_info-->
    <style name="rest_info_title">
        <item name="android:fontFamily">@font/NanumSquareEB</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="rest_info_content">
        <item name="android:fontFamily">@font/NanumSquareR</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--profile-->


</resources>
